         point="org.eclipse.ui.decorators">
      <decorator
            adaptable="true"
            class="org.polymap.core.mapeditor.ui.EditLayerDecorator"
            id="org.polymap.core.mapeditor.ui.EditLayerDecorator"
            label="EditLayer"
            lightweight="true"
            state="true">
         <enablement>
            <and>
               <objectClass
                     name="org.polymap.core.project.ILayer">
               </objectClass>
            </and>
         </enablement>
      </decorator>
   </extension-->

</plugin>
