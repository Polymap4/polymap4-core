<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="net.refractions.udig.catalog.ICatalog">
      <catalog
            class="org.polymap.core.catalog.model.CatalogImpl">
      </catalog>
   </extension>
   <extension
         id="org.polymap.core.catalog.qi4j.assambler"
         point="org.polymap.core.model.moduleAssemblers">
      <assembler
            class="org.polymap.core.catalog.model.CatalogRepositoryAssembler">
      </assembler>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="org.polymap.core.catalog.catalogContribution"
            objectClass="net.refractions.udig.catalog.ICatalog">
         <action
               class="org.polymap.core.catalog.actions.PropertyDialogAction"
               id="org.polymap.core.catalog.catalogProperties"
               label="%actions_properties"
               menubarPath="properties"
               tooltip="%actions_catalogProperties">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="false"
            id="org.polymap.core.catalog.serviceContribution"
            objectClass="net.refractions.udig.catalog.IService">
         <action
               class="org.polymap.core.catalog.actions.PropertyDialogAction"
               id="org.polymap.core.catalog.serviceProperties"
               label="%actions_properties"
               menubarPath="properties"
               tooltip="%actions_serviceProperties">
         </action>
         <action
               class="org.polymap.core.catalog.actions.ResetServiceAction"
               enablesFor="+"
               icon="icons/etool16/refresh_service.gif"
               id="org.polymap.core.catalog.resetServiceAction"
               label="%actions_resetService"
               tooltip="%actions_resetServiceTip">
         </action>
         <action
               class="org.polymap.core.catalog.actions.RemoveServiceAction"
               enablesFor="+"
               icon="icons/etool16/remove_service.gif"
               id="org.polymap.core.catalog.removeServiceAction"
               label="%actions_removeService"
               tooltip="%actions_removeServiceTip">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="net.refractions.udig.catalog.IService"
            class="org.polymap.core.catalog.model.ServiceAdapterFactory">
         <adapter
               type="org.polymap.core.model.security.ACL">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:net.refractions.udig.catalog.ui.CatalogView">
         <dynamic
               class="org.polymap.core.catalog.ui.CatalogImportMenu"
               id="org.polymap.core.catalog.CatalogImportMenu">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </dynamic>
      </menuContribution>
      <menuContribution
            locationURI="popup:net.refractions.udig.catalog.ui.CatalogView">
         <dynamic
               class="org.polymap.core.catalog.ui.CatalogImportMenu"
               id="org.polymap.core.catalog.CatalogImportMenu2">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </dynamic>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.polymap.core.catalog.CatalogNewCategory"
            class="org.polymap.core.catalog.ui.CatalogImport$CatalogNewWizardAdapter"
            finalPerspective="org.polymap.core.project.dataPerspective"
            icon="icons/obj16/datastore_obj.gif"
            id="org.polymap.core.catalog.CatalogNewWizardAdapter"
            name="%CatalogNewWizard_title"
            project="false">
      </wizard>
      <category
            id="org.polymap.core.catalog.CatalogNewCategory"
            name="%CatalogNewWizard_category">
      </category>
      <primaryWizard
            id="org.polymap.core.catalog.CatalogNewWizardAdapter">
      </primaryWizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.polymap.core.project.dataPerspective">
         <newWizardShortcut
               id="org.polymap.core.catalog.CatalogNewWizardAdapter">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <!--extension
         point="net.refractions.udig.catalog.resolvers">
      <factory
            class="org.polymap.core.catalog.qi4j.ServiceAdapterFactory"
            resolveableType="net.refractions.udig.catalog.IService">
         <resolve
               type="org.polymap.core.model.security.ACL">
         </resolve>
      </factory>
   </extension-->

</plugin>
