   <extension
         point="org.polymap.core.operation.concerns">
      <concern
            class="org.polymap.rhei.internal.form.NewFeatureOperationConcern"
            id="org.polymap.rhei.NewFeatureOperationConcern">
      </concern>
   </extension>
   <extension
         point="org.polymap.core.mapeditor.mapContextMenu">
      <contribution
            class="org.polymap.rhei.internal.form.OpenFormMapContextMenu"
            id="org.polymap.rhei.OpenFormContextMenu">
      </contribution>
   </extension>
   <extension
         point="org.eclipse.ui.elementFactories">
      <factory
            class="org.polymap.rhei.form.FormEditorInput"
            id="org.polymap.rhei.FormEditorInputFactory">
      </factory>
   </extension>

</plugin>
